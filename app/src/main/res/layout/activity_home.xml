<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/columbiaBlue"
    tools:context="frc3824.rscout2018.activities.HomeActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="RScout 2018"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/navyBlue"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Logo for the app"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/version"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:text="Version"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />


    <TextView
        android:id="@+id/user_type"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:text="User Type"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version" />

    <TextView
        android:id="@+id/scouting_label"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:text="Scouting"
        android:textAlignment="center"
        android:textColor="@color/navyBlue"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_type" />

    <LinearLayout
        android:id="@+id/scouting_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scouting_label">

        <info.hoang8f.widget.FButton
            android:id="@+id/match_scouting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Match"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/pit_scouting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Pit"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/super_scouting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Super"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/view_label"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View"
        android:textAlignment="center"
        android:textColor="@color/navyBlue"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scouting_buttons" />

    <LinearLayout
        android:id="@+id/view_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_label">

        <info.hoang8f.widget.FButton
            android:id="@+id/match_view_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Match"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/team_view_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Team"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/event_view_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:text="Event"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:buttonColor="@color/navyBlue"
            app:cornerRadius="5dp"
            app:shadowColor="@color/black"
            app:shadowEnabled="true"
            app:shadowHeight="5dp" />
    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/settings_button"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:buttonColor="@color/navyBlue"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/view_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shadowColor="@color/black"
        app:shadowEnabled="true"
        app:shadowHeight="5dp" />

</android.support.constraint.ConstraintLayout>
