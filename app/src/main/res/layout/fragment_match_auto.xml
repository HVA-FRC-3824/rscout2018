<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name = "tmd"
            type = "frc3824.rscout2018.database.data_models.TeamMatchData" />
    </data>

    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width = "match_parent"
                  android:layout_height = "match_parent"
                  android:orientation = "vertical">

        <frc3824.rscout2018.views.SavableCheckbox
            android:id= "@+id/auto_baseline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Crossed Base Line" />

        <frc3824.rscout2018.views.SavableSpinner
            android:id="@+id/auto_start_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="Start position"
            app:spinner_values="@array/start_position_options" />
    </LinearLayout>
</layout>