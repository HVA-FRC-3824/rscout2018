<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/Blue">

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/blue_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Blue Speed" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/blue_torque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Blue Torque (Pushing)" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/blue_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Blue Control" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/blue_defense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Blue Defense" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/Black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/Red">

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/red_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Red Speed" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/red_torque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Red Torque (Pushing)" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/red_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Red Control" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black"/>

        <frc3824.rscout2018.views.SavableQualitative
            android:id="@+id/red_defense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:label="Red Defense" />
    </LinearLayout>


</LinearLayout>